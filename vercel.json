{
  "build": {
    "env": {
      "SKIP_ENV_VALIDATION": "true",
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "src/app/api/posts/**": {
      "maxDuration": 60
    },
    "src/app/api/upload/**": {
      "maxDuration": 60
    },
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "src/pages/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "images": {
    "sizes": [640, 750, 828, 1080, 1200, 1920],
    "domains": ["*.vercel.app", "res.cloudinary.com"]
  }
}
